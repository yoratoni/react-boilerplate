{
    "name": "react-boilerplate",
    "productName": "React Boilerplate",
    "version": "1.0.0",
    "description": "A React & BiomeJS boilerplate entirely configured to suit my standards.",
    "repository": "https://github.com/yoratoni/react-boilerplate",
    "author": "yoratoni <yoratoni.dev@gmail.com>",
    "license": "MIT",
    "private": true,
    "scripts": {
        "v-bump": "yarn version --patch",
        "dev": "craco start",
        "build": "craco build",
        "lint": "biome lint .",
        "lint:fix": "biome lint . --apply",
        "format": "biome format .",
        "format:fix": "biome format --write .",
        "check-types": "tsc --noEmit --skipLibCheck --incremental false"
    },
    "dependencies": {
        "clsx": "^2.1.1",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-scripts": "5.0.1",
        "tailwind-merge": "^2.5.2",
        "tailwindcss": "^3.4.10",
        "tailwindcss-animate": "^1.0.7"
    },
    "devDependencies": {
        "@babel/core": "^7.25.2",
        "@babel/plugin-syntax-flow": "^7.24.7",
        "@babel/plugin-transform-react-jsx": "^7.25.2",
        "@biomejs/biome": "^1.8.3",
        "@craco/craco": "^7.1.0",
        "@types/node": "^22.5.1",
        "@types/react": "^18.3.5",
        "@types/react-dom": "^18.3.0",
        "autoprefixer": "^10.4.20",
        "postcss": "^8.4.41",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.5.4"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}