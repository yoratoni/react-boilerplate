{
    "name": "react-boilerplate",
    "productName": "React Boilerplate",
    "version": "1.0.0",
    "description": "A React & EsLint boilerplate entirely configured to suit my standards.",
    "repository": "https://github.com/yoratoni/react-boilerplate",
    "author": "yoratoni <yoratoni.dev@gmail.com>",
    "license": "MIT",
    "private": true,
    "scripts": {
        "v-bump": "yarn version --patch",
        "dev": "craco start",
        "build": "craco build",
        "lint": "eslint . --ext .ts,.tsx",
        "lint:fix": "eslint . --ext .ts,.tsx --fix",
        "check-types": "tsc --noEmit --skipLibCheck --incremental false"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-scripts": "5.0.1",
        "tailwindcss-animate": "^1.0.7"
    },
    "devDependencies": {
        "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
        "@craco/craco": "^7.1.0",
        "@total-typescript/ts-reset": "^0.5.1",
        "@types/react": "^18.2.77",
        "@types/react-dom": "^18.2.25",
        "@typescript-eslint/eslint-plugin": "^7.6.0",
        "@typescript-eslint/parser": "^7.6.0",
        "autoprefixer": "^10.4.19",
        "eslint": "^8.57.0",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-react": "^7.34.1",
        "postcss": "^8.4.38",
        "tailwindcss": "^3.4.3",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.4.5"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}